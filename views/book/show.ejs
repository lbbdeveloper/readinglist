<%- include('../partials/html-head.ejs') %>
<main class="homePage">
  <%- include('../partials/nav') %>

  <div class="container-fluid">
    <h6 class="mx-auto">Book Show Page</h6>

    <div class="card mx-auto mt-3 p-3" style="width: 22rem">
      <div class="d-flex justify-content-between p-1">
        <a class="btn btn-outline-warning" href="/book"> << </a>

        <% if (user) { %>

        <a class="btn btn-outline-warning" href="/book/<%= book._id %>/edit">
          Edit
        </a>
        <% } %>
      </div>

      <img src="<%= book.img %> " class="card-img-top" alt="Placeholder Img" />
      <div class="card-body">
        <h5 class="card-title text-center"><%= book.name %></h5>
        <p class="mb-0 text-center">Author:</p>
        <p class="mb-1 text-center"><%= book.author %></p>
        <p class="mb-0 text-center custom-text">Description:</p>
        <p class="mb-3 text-center custom-text"><%= book.description %></p>

        <% if (user) { %>
        <a
          class="text-center d-block mx-5 btn btn-outline-warning"
          href="/book/<%= book._id %>/addtolist"
        >
          <span>Add to My List</span>
        </a>

        <% } %>
      </div>
    </div>
  </div>
</main>
<%- include('../partials/footer.ejs') %>
